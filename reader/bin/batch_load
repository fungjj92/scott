#!/bin/sh
# set -e

# Listings
cd "$READER_ROOT/../listings"
for file in publicnotices.asp*.html; do
  listing "$file" web
done

# Public notices
cd "$READER_ROOT/../documents"
for permitApplicationNumber in *; do
  (
    echo "$permitApplicationNumber"
    cd "$permitApplicationNumber"
    translate public_notice.pdf
    public_notice "$permitApplicationNumber" public_notice.pdf.txt
    convert -geometry 1200 public_notice.pdf[0] public_notice.jpg
    [ -e drawings.jpg ] && convert -geometry 1200 drawings.pdf[1] drawings.jpg
  )
done
